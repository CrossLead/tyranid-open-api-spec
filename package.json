{
  "name": "tyranid-openapi",
  "version": "0.2.0",
  "description": "Open API spec and express app generator for tyranid",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "bash -c \"mkdir -p ./.tmp/ && rm -rf ./dist/ && npm run lint:fix && npm run build && npm run ava\"",
    "ava": "nyc ava",
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "tslint --fix -c tslint.json './src/**/*.ts'",
    "lint": "tslint -c tslint.json './src/**/*.ts'",
    "prettier": "prettier --single-quote --write ./src/**/*.ts ./src/*.ts",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "keywords": ["tyranid", "swagger", "openapi", "api"],
  "author": "bsouthga@gmail.com",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/swagger-schema-official": "^2.0.4",
    "ajv": "^5.0.1",
    "js-yaml": "^3.8.3",
    "swagger-schema-official": "^2.0.0-bab6bed"
  },
  "peerDependencies": {
    "tyranid": "^0.2.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.5.29",
    "@types/lodash": "^4.14.69",
    "@types/node": "^6.0.68",
    "ava": "0.19.1",
    "codecov": "^2.3.0",
    "nyc": "^11.1.0",
    "prettier": "^1.5.3",
    "tslint": "5.1.0",
    "typedoc": "^0.7.1",
    "typescript": "2.4.2",
    "tyranid": "^0.2.2"
  },
  "ava": {
    "files": ["dist/test/index.js"]
  },
  "nyc": {
    "include": ["dist/lib"]
  }
}
